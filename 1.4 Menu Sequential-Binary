#include <stdio.h>
#include <stdlib.h>
#define MAKS 5

void shell(int []);
void tukar(int *, int *);
void seq_search(int[], int);
void tampil(int []);
void menu();

int main()
{
    do{
        menu();
    }while(1);

        return 0;
}

void menu(){
    int key;
    char pilih;
    do{
        int A[] = {4, 2, 5, 3, 1};
        printf("Data dalam array : ");
        tampil(A);
        puts("MENU SEARCHING");
        printf("1. Sequential Search Unsorted\n");
        printf("2. Sequential Search Sorted\n");
        printf("3. Binary Search\n");
        printf("4. Keluar\n");
        printf("Pilih menu : ");
        scanf("%c", &pilih);
        fflush(stdin);

        switch(pilih){
    case '1' :
        printf("Data yang akan dicari : ");
        scanf("%d", &key);
        fflush(stdin);
        seq_search(A, key);
        break;
    case '2' :
        shell(A);
        printf("Data setelah diurutkan : ");
        tampil(A);
        printf("Data yang akan dicari : ");
        scanf("%d", &key);
        fflush(stdin);
        seq_search(A, key);
        break;
    case '3' :
        shell(A);
        printf("Data setelah diurutkan : ");
        tampil(A);
        printf("Data yang akan dicari : ");
        scanf("%d", &key);
        fflush(stdin);
        bin_search(A, key);
    default :
        puts("Pilih menu yang ada !\n");
        break;
        }
    }while(pilih==1);

}

void shell(int x[])
{
    //printf("\nStep by step :\n");
    int i, jarak, did_swap=1;
    jarak=MAKS;
    while(jarak>1)
    {
        jarak=jarak/2;
        did_swap=1;
        while(did_swap==1)
        {
            did_swap=0;
            for(i=0; i<(MAKS-jarak); i++)
            {
                if(x[i] > x[i+jarak])
                {
                    tukar(&x[i], &x[i+jarak]);
                    did_swap = 1;
                    //tampil(x);
                }
            }
        }
    }
}

void tukar(int *x, int *y)
{
    int temp;
    temp=*x;
    *x=*y;
    *y=temp;
}

void seq_search(int x[], int key)
{
    int i=0, find=0;

    while(i<MAKS && !find){
        if(x[i] == key)
            find = 1;
        else
            i++;
    }

    if(find)
        printf("%d berada pada indeks ke-%d\n\n", key, i);
    else
        printf("%d tidak ada dalam data array\n\n", key);

}

void bin_search(int x[], int key)
{
    int l, r, m, find=0;

    l=0;
    r=MAKS-1;

    while(l<=r && !find){
        m = (l+r)/2;
        if(x[m] == key)
            find=1;
        else if(x[m] < key)
            l = m+1;
        else
            r=m-1;
    }
    if(find)
        printf("%d berada pada indeks ke-%d\n\n", key, m);
    else
        printf("%d tidak ada dalam data array\n\n", key);

}

void tampil(int x[])
{
    int i;
    for(i=0; i<MAKS; i++)
        printf("%d ", x[i]);
    puts(" ");
}
